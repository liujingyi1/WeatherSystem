<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppTheme" parent="android:style/Theme.Light.NoTitleBar">
        <item name="android:windowTranslucentStatus">true</item>
        <!--item name="android:windowTranslucentNavigation">true</item-->
    </style>
    
    <style name="AppThemeWithTitle" parent="android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/Theme.ActionBar</item>
        <item name="android:actionBarSize">@dimen/actionbar_size</item>
    </style>
    
    <style name="Theme.ActionBar" parent="@android:style/Widget.Material.ActionBar.Solid">
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:contentInsetEnd">0dp</item>
    </style>
    
    <style name="title_style">
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="android:paddingTop">@dimen/title_paddingTop</item>
        <item name="android:textSize">@dimen/title_textSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="menu_checkbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/menu_checkbox</item>
    </style>
</resources>
